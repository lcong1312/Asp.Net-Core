@{
	ViewData["Title"] = "Payment Success";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        .payment-fail-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
        }
        .payment-fail-box {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        .payment-fail-box h1 {
            font-size: 2.5rem;
        }
        .payment-fail-box h3 {
            font-size: 1.5rem;
        }
        .payment-fail-box a {
            margin-top: 20px;
            display: inline-block;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid payment-fail-container">
        <div class="payment-fail-box text-center">
            <h1 class="text-primary">Thanh toán thành công!</h1>
            <h3 class="text-danger">Cảm ơn bạn đã mua hàng. Đơn hàng của bạn đã được thanh toán.</h3>
            <a class="btn btn-primary mt-3" href="@Url.Action("Index", "Home")">Về Trang Chủ</a>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
