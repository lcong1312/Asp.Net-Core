                                <script>
                                    function handleCheckboxChange(checkboxId) {
        var checkboxes = document.querySelectorAll('input[name="paymentMethod"]');
        checkboxes.forEach(function(checkbox) {
            if (checkbox.id !== checkboxId) {
                checkbox.checked = false;
            }
        });
    }

    function validateAndSubmit() {
        // Lấy giá trị từ các trường input
        var name = document.getElementById('name').value;
        var address = document.getElementById('address').value;
        var phone = document.getElementById('phone').value;

        // Kiểm tra xem các trường đã được điền đầy đủ hay không
        if (name.trim() === '' || address.trim() === '' || phone.trim() === '') {
            // Hiển thị thông báo lỗi nếu có trường chưa được điền
            alert('Vui lòng nhập đầy đủ thông tin tên, địa chỉ và số điện thoại.');
            return; // Ngăn chặn việc tiếp tục nếu có lỗi
        }
        
        // Thực hiện kiểm tra việc chọn phương thức thanh toán ở đây
        var paymentMethods = document.querySelectorAll('input[name="paymentMethod"]');
        var paymentSelected = false;
        for (var i = 0; i < paymentMethods.length; i++) {
            if (paymentMethods[i].checked) {
                paymentSelected = true;
                break;
            }
        }
        
        // Kiểm tra xem đã chọn ít nhất một phương thức thanh toán hay chưa
        if (!paymentSelected) {
            alert('Vui lòng chọn ít nhất một phương thức thanh toán.');
            return;
        }

        // Gửi Ajax request hoặc chuyển hướng người dùng đến trang OrderSuccess
        // Ở đây, tôi giả sử sử dụng Ajax request để gọi Action method "PlaceOrder"
        // Sau khi xác nhận các điều kiện, gọi Action method để xử lý việc đặt hàng
        $.ajax({
            url: '@Url.Action("Checkout", "Cart")',
            type: 'POST',
            success: function(response) {
                // Nếu Action method xử lý thành công, hiển thị thông báo đặt hàng thành công
                // Ở đây, tôi giả sử trả về một View chứa thông báo đặt hàng thành công
                $('#orderSuccessMessage').show();
                alert('Đơn đặt hàng của bạn đã thành công, vui lòng thanh toán khi nhận hàng.')
                                // Hiển thị thông báo đặt hàng thành công
                $.ajax({
                    url: '@Url.Action("RemoveCartSession", "Cart")',
                    type: 'POST',
                }); //xóa sesssion
                window.location.reload();
            },
            error: function() {
                alert('Đã xảy ra lỗi trong quá trình xử lý đơn hàng.');
            }
        });
    }
</script>
