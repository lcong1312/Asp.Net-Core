                                    <th>Sản Phẩm</th>
                                    <th>Giá</th>
                                    <th>Số Lượng</th>
                                    <th>Tổng Tiền</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody >
                                @foreach(var line in Model?.lines ){
                                <tr>
                                    <td class="shoping__cart__item" class="imgcart">
                                        <img src="@Url.Content("~/ProductsImages/" + line.Product.AnhDaiDien)" alt="" style="max-width: 40%;">
                                    </td>
                                    <td class="shoping__cart__item">
                                        <img src="img/cart/cart-3.jpg" alt="">
                                        <h5 name="sp" >@line.Product.TenSp</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @line.Product.GiaLonNhatFomat
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div >
                                              <a href="@Url.Action("UpDateCart", "Cart", new { productId = line.Product.MaSp })" class="dec qtybtn">-</a>
                                              <input class="cart" type="text" value="@line.Quantity" readonly style="width: 60px;text-align:center;">
                                            <a href="@Url.Action("AddToCart", "Cart", new { productId = line.Product.MaSp })" class="inc qtybtn">+</a>
                                        </div>
                                        
                                    </td>
                                    <td class="shoping__cart__total">
                                        @(String.Format("{0:N0}", (line.Product.GiaLonNhat * line.Quantity))) VNĐ.
                                    </td>
                                    <td class="shoping__cart__item__close">
                                    <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = line.Product.MaSp })">
                                    <span class="icon_close"></span>
                                        @*<a href="/Cart/RemoveFromCart/?productId=@line.MaSp"></a>*@
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
