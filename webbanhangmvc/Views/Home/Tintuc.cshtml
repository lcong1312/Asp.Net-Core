                        <div class="blog__sidebar__recent">
    <!-- Hiển thị các bài viết gần đây -->
    @if (ViewBag.RecentPosts != null)
    {
        @foreach (var post in ViewBag.RecentPosts)
        {
            <a href="@Url.Action("Tintuc", new { id = post.Id })" class="blog__sidebar__recent__item">
                <div class="blog__sidebar__recent__item__pic">
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@Url.Content("~/ProductsImages/" + post.ImageUrl)" alt="Image" style="max-width: 100px; max-height: 100px;" />
                    }
                </div>
                <div class="blog__sidebar__recent__item__text">
                    <h6>@post.Title</h6>
                    <span>@post.CreatedAt</span>
                </div>
            </a>
        }
    }
</div>

                    </div>
                    <div class="blog__sidebar__item">
                        <div class="blog__sidebar__item__tags">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text" style="text-align: center;">
                    @if (ViewBag.SinglePost != null)
{
    <h3>@ViewBag.SinglePost.Title</h3>
    <div>
        @if (!string.IsNullOrEmpty(ViewBag.SinglePost.ImageUrl))
        {
            <img src="@Url.Content("~/ProductsImages/" + ViewBag.SinglePost.ImageUrl)" alt="Image" style="max-width: 350px;" align="right" />
        }
        <p>@ViewBag.SinglePost.Content</p>
    </div>
}

                </div>
