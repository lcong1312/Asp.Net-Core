@using X.PagedList.Mvc.Core;
@using webbanhangmvc.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
@model TUserKh
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>VaLiKing Login</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../LayoutAdmin/assets/css/style2.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../LayoutAdmin/assets/images/favicon1.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="../../LayoutAdmin/assets/images/logoo2.png">
                            </div>
                            <h4>Tạo Mới Ở Đây?</h4>
                            <h6 class="font-weight-light">Đăng ký rất dễ dàng. Chỉ mất vài bước</h6>
                            @using (Html.BeginForm("Register", "Acces", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.UsernameKh, new { @class = "form-control form-control-lg", placeholder = "Tài Khoản", required = "required", autofocus = "autofocus" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Password, new { @class = "form-control form-control-lg", placeholder = "Mật Khẩu" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.TenKhachHang, new { @class = "form-control form-control-lg", placeholder = "Tên Khách Hàng" })
                                </div>
                                <div class="form-group"  >
                                    @Html.TextBoxFor(x => x.NgaySinh, new { @class = "form-control form-control-lg", placeholder = "Ngày Sinh" })
                                </div>
                                <div class="form-group"  >
                                    @Html.TextBoxFor(x => x.SoDienThoai1, new { @class = "form-control form-control-lg", placeholder = "Số Điện Thoại" })
                                </div>
                                <div class="form-group"  >
                                    @Html.TextBoxFor(x => x.DiaChi, new { @class = "form-control form-control-lg", placeholder = "Địa Chỉ" })
                                </div>

                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">Tôi Đồng Ý Với Tất Cả Các Điều Khoản Và Điều Kiện </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Đăng Ký</button>
                                    @if (!ViewData.ModelState.IsValid)
                                    {
                                        <div class="text-danger">
                                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                            {
                                                <p>@error.ErrorMessage</p>
                                            }
                                        </div>
                                    }
                                </div>
                                <div class="text-center mt-4 font-weight-light"> Đã Có Tài Khoản? <a asp-controller="Acces" asp-action="Login">Đăng Nhập</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
<!-- inject:js -->
<script src="../../LayoutAdmin/assets/js/off-canvas.js"></script>
<script src="../../LayoutAdmin/assets/js/hoverable-collapse.js"></script>
<script src="../../LayoutAdmin/assets/js/misc.js"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<!-- endinject -->

</body>
</html>
