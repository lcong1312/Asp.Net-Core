@using webbanhangmvc.Models
@model LayoutViewModel

<h2>Chỉnh sửa Header</h2>

<form asp-action="EditHeader" method="post">
    <div class="form-group">
        <label for="headerContent">Nội dung header:</label><br />
        <textarea id="headerContent" name="Header" rows="20" cols="200">@Html.Raw(Model.Header)</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu</button>
    </div>
</form>
